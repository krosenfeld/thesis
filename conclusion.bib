  month = jul,
  year = {2013},
  keywords = {dynamics,ISM: jets and outflows,ISM: kinematics and,stars: individual: HD 163296,stars: pre-main sequence},
  pages = {A73},
  file = {NASA/ADS Full Text PDF:/home/krosenfe/.mozilla/firefox/5dl2iz3a.default/zotero/storage/BHWDGX2B/Klaassen et al. - 2013 - ALMA detection of the rotating molecular disk wind.pdf:application/pdf}
}

@article{hughes08,
  title = {Gas and Dust Emission at the Outer Edge of Protoplanetary Disks},
  volume = {678},
  issn = {0004-637X},
  url = {http://adsabs.harvard.edu/abs/2008ApJ...678.1119H},
  doi = {10.1086/586730},
  abstract = {We investigate the apparent discrepancy between gas and dust outer radii 
derived from millimeter observations of protoplanetary disks. Using 230
and 345 GHz continuum and CO J=3-2 data from the Submillimeter Array for
four nearby disk systems (HD 163296, TW Hydrae, GM Aurigae, and MWC
480), we examine models of circumstellar disk structure and the effects
of their treatment of the outer disk edge. We show that for these disks,
models described by power laws in surface density and temperature that
are truncated at an outer radius are incapable of reproducing both the
gas and dust emission simultaneously: the outer radius derived from the
dust continuum emission is always significantly smaller than the extent
of the molecular gas disk traced by CO emission. However, a simple model
motivated by similarity solutions of the time evolution of accretion
disks that includes a tapered exponential edge in the surface density
distribution (and the same number of free parameters) does much better
at reproducing both the gas and dust emission. While this analysis does
not rule out the disparate radii implied by the truncated power law
models, a realistic alternative disk model, grounded in the physics of
accretion, provides a consistent picture for the extent of both the gas
and dust.},
  timestamp = {2015-07-08 01:23:47},
  urldate = {2015-07-08},
  journal = {The Astrophysical Journal},
  author = {Hughes, A. M. and Wilner, D. J. and Qi, C. and Hogerheijde, M. R.},
  month = may,
  year = {2008},
  keywords = {accretion,accretion disks,STARS: CIRCUMSTELLAR MATTER,Stars: Planetary Systems: Protoplanetary Disks,Stars: Pre-Main-Sequence},
  pages = {1119--1126}
}

@article{harris12,
  title = {A Resolved Census of Millimeter Emission from Taurus Multiple Star Systems},
  volume = {751},
  issn = {0004-637X},
  url = {http://adsabs.harvard.edu/abs/2012ApJ...751..115H},
  doi = {10.1088/0004-637X/751/2/115},
  abstract = {We present a high angular resolution millimeter-wave dust continuum 
imaging survey of circumstellar material associated with the individual
components of 23 multiple star systems in the Taurus-Auriga young
cluster. Combined with previous measurements in the literature, these
new data permit a comprehensive look at how the millimeter luminosity (a
rough tracer of disk mass) relates to the separation and mass of a
stellar companion. Approximately one-third (28\%-37\%) of the individual
stars in multiple systems have detectable millimeter emission, an
incidence rate half that for single stars ({\textasciitilde}62\%) which does not depend
on the number of companions. There is a strong, positive correlation
between the luminosity and projected separation (ap ) of a
stellar pair. Wide pairs (ap \ensuremath{>} 300 AU) have a similar
luminosity distribution as single stars, medium pairs (ap
\ensuremath{\approx} 30-300 AU) are a factor of five fainter, and close pairs
(ap \ensuremath{<} 30 AU) are {\textasciitilde}5{\texttimes} fainter yet (aside from a
small, but notable population of bright circumbinary disks). In most
cases, the emission is dominated by a disk around the primary (or a wide
tertiary in hierarchical triples), but there is no clear relationship
between luminosity and stellar mass ratio. A direct comparison of
resolved disk sizes with predictions from tidal truncation models yields
mixed results; some disks are much larger than expected given the
projected distances of their companions. We suggest that the presence of
a stellar companion impacts disk properties at a level comparable to the
internal evolution mechanisms that operate in an isolated system, with
both the multiple star formation process itself and star-disk tidal
interactions likely playing important roles in the evolution of
circumstellar material. From the perspective of the mass content of the
disk reservoir, we expect that (giant) planet formation is inhibited
around the components of close pairs or secondaries, but should be as
likely as for single stars around the primaries (or wide tertiaries in
hierarchical triples) in more widely separated multiple star systems.},
  timestamp = {2015-08-03 15:41:16},
  urldate = {2015-07-08},
  journal = {The Astrophysical Journal},
  author = {Harris, Robert J. and Andrews, Sean M. and Wilner, David J. and Kraus, Adam L.},
  month = jun,
  year = {2012},
  keywords = {BINARIES: GENERAL,protoplanetary disks,stars: formation},
  pages = {115},
  file = {NASA/ADS Full Text PDF:/home/krosenfe/.mozilla/firefox/5dl2iz3a.default/zotero/storage/WKENGQZR/Harris et al. - 2012 - A Resolved Census of Millimeter Emission from Taur.pdf:application/pdf}
}

