  urldate = {2015-07-08},
  journal = {Monthly Notices of the Royal Astronomical Society},
  author = {Reg{\'a}ly, Zs. and Juh{\'a}sz, A. and S{\'a}ndor, Zs. and Dullemond, C. P.},
  month = jan,
  year = {2012},
  keywords = {accretion,ACCRETION DISCS,hydrodynamics,instabilities,methods: numerical,protoplanetary discs},
  pages = {1701--1712},
  file = {NASA/ADS Full Text PDF:/home/krosenfe/.mozilla/firefox/5dl2iz3a.default/zotero/storage/K5BUS49A/RegÃ¡ly et al. - 2012 - Possible planet-forming regions on submillimetre i.pdf:application/pdf}
