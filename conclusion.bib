  journal = {Nature},
  author = {{\"O}berg, Karin I. and Guzm{\'a}n, Viviana V. and Furuya, Kenji and Qi, Chunhua and Aikawa, Yuri and Andrews, Sean M. and Loomis, Ryan and Wilner, David J.},
